<div class="oli-div">

  <h1> <%= @cocktail.name %></h1>

    <div>
      <div class="card-trip">
        <%= cl_image_tag @cocktail.photo, crop: :fill %>

  <h2>Liste des ingrédients</h2>
  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li>
        <%= dose.description + ' - ' + dose.ingredient.name %>
        <%= link_to 'destroy', dose_path(dose), method: :delete %>
      </li>
    <% end %>
  </ul>


  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.input :description %>
    <%= f.association :ingredient %>
    <%= f.submit class: "btn btn-primary mt-4 mb-4" %>
  <% end %>





<%= link_to "Revenir à la liste", cocktails_path, class: "btn btn-primary mt-4" %>

</div>





